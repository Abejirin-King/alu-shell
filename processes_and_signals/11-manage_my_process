#!/usr/bin/env bash

# This script manages the "manage_my_process" script by starting, stopping, or restarting it.
# It creates and deletes a PID file for process tracking and ensures appropriate actions based on user input.

PID_FILE="/var/run/my_process.pid"

# Start the process
start() {
  # Check if the process is already running
  if [ -f "$PID_FILE" ]; then
    echo "manage_my_process is already running."
    exit 1
  fi

  # Start the manage_my_process script in the background and save its PID to a file
  /path/to/manage_my_process &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

# Stop the process
stop() {
  # Check if the process is running by checking for the PID file
  if [ ! -f "$PID_FILE" ]; then
    echo "manage_my_process is not running."
    exit 1
  fi

  # Read the PID from the file, stop the process, and delete the PID file
  PID=$(cat "$PID_FILE")
  kill "$PID" && rm -f "$PID_FILE"
  echo "manage_my_process stopped"
}

# Restart the process
restart() {
  stop
  start
  echo "manage_my_process restarted"
}

# Main script logic to handle arguments
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac

